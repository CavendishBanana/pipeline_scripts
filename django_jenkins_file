pipeline {
    agent { 
        node {
            label 'docker-agent-django'
            }
      }
    stages {
        stage('Build') {
            steps {
            	mkdir /home/task
		touch /home/task/test_report.txt
		touch /home/task/manage_file_dir_path.txt
		cd /home/task
		git clone https://github.com/CavendishBanana/pipeline_scripts.git
		cp /home/task/pipeline_scrips/make_test_script.sh /home/task/make_test_script.sh
		chmod 711 make_test_script.sh
		git clone https://github.com/CavendishBanana/aplikacja_lista_zakopow.git
            	echo "After build"
		}
        }
        stage('Test') {
            steps {
            	cd /home/task
		bash make_test_script.sh
		echo "After test"
            }
        }
        stage('Deliver') {
            steps {
            	cd /home/task/aplikacja_lista_zakopow/lista_zakopow
		python3 manage.py runserver
            	echo "Server running"
		}
        }
    }
}
